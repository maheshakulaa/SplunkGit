          <condition value="pie">
            <set token="pie">pie</set>
            <unset token="column"></unset>
          </condition>
          <condition value="column">
            <unset token="pie"></unset>
            <set token="column">colunm</set>
          </condition>
        </change>
        <default>pie</default>
        <initialValue>pie</initialValue>
